# ==============================================
# BookReader AI - Production Environment
# ==============================================

# -----------------
# Database Settings
# -----------------
DATABASE_NAME=bookreader
DATABASE_USER=postgres
DATABASE_PASSWORD=your_very_secure_db_password_here

# -----------------
# Redis Settings
# -----------------
REDIS_PASSWORD=your_redis_password_here

# -----------------
# Security Settings
# -----------------
SECRET_KEY=your_very_long_secret_key_with_at_least_32_characters_here
JWT_SECRET_KEY=your_jwt_secret_key_with_at_least_32_characters_here
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# -----------------
# Domain & CORS
# -----------------
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,localhost
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# -----------------
# AI Services
# -----------------
OPENAI_API_KEY=sk-your-openai-api-key-here
POLLINATIONS_ENABLED=true

# -----------------
# Frontend Settings
# -----------------
REACT_APP_API_URL=/api
REACT_APP_WS_URL=/ws
REACT_APP_ENVIRONMENT=production

# -----------------
# Performance
# -----------------
WORKERS_COUNT=4
CELERY_WORKERS=4
CELERY_REPLICAS=2
MAX_CONNECTIONS_COUNT=10
MIN_CONNECTIONS_COUNT=5

# -----------------
# File Upload
# -----------------
UPLOAD_MAX_SIZE=52428800
STATIC_FILES_URL=/static

# -----------------
# Logging
# -----------------
LOG_LEVEL=info

# -----------------
# Monitoring (Optional)
# -----------------
GRAFANA_USER=admin
GRAFANA_PASSWORD=your_grafana_password_here

# -----------------
# Email (Optional)
# -----------------
EMAIL_HOST=smtp.yourmailserver.com
EMAIL_PORT=587
EMAIL_USER=noreply@yourdomain.com
EMAIL_PASSWORD=your_email_password
EMAIL_USE_TLS=true

# -----------------
# Backup (Optional)
# -----------------
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30
S3_BACKUP_BUCKET=your-backup-bucket
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# -----------------
# SSL Certificates (Optional)
# -----------------
SSL_ENABLED=false
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem
# BookReader AI - Production Environment Variables
# Copy this file to .env.production and update with your actual values

# =============================================================================
# DOMAIN & SSL CONFIGURATION
# =============================================================================
DOMAIN_NAME=fancai.ru
DOMAIN_URL=https://fancai.ru

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DB_NAME=bookreader_prod
DB_USER=bookreader_user
DB_PASSWORD=your_super_secure_db_password_here

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_PASSWORD=your_super_secure_redis_password_here

# =============================================================================
# APPLICATION SECRETS
# =============================================================================
SECRET_KEY=your_super_secret_key_for_app_here_min_32_chars
JWT_SECRET_KEY=your_jwt_secret_key_here_min_32_chars
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================================
# AI SERVICES
# =============================================================================
# OpenAI API (optional)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Pollinations.ai (free service)
POLLINATIONS_ENABLED=true

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================
# Backend workers
WORKERS_COUNT=4
LOG_LEVEL=INFO

# Celery workers
CELERY_CONCURRENCY=2
CELERY_REPLICAS=2

# File upload limits (50MB default)
MAX_FILE_SIZE=52428800

# =============================================================================
# MONITORING & NOTIFICATIONS
# =============================================================================
# Grafana credentials
GRAFANA_USER=admin
GRAFANA_PASSWORD=your_grafana_password_here

# Watchtower notifications (optional)
WATCHTOWER_NOTIFICATIONS=slack
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Watchtower settings
WATCHTOWER_DEBUG=false

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
ALLOWED_HOSTS=fancai.ru,www.fancai.ru,localhost,127.0.0.1
CORS_ORIGINS=https://fancai.ru,https://www.fancai.ru

# =============================================================================
# FRONTEND BUILD CONFIGURATION (Vite)
# =============================================================================
VITE_API_URL=https://fancai.ru/api/v1
VITE_WS_URL=wss://fancai.ru/ws
VITE_APP_NAME=BookReader AI

# =============================================================================
# BACKUP & MAINTENANCE
# =============================================================================
# Backup settings (for future use)
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket
BACKUP_S3_REGION=us-east-1

# =============================================================================
# PRODUCTION PROFILES
# =============================================================================
# Available profiles:
# - Default: nginx, frontend, backend, postgres, redis, celery-worker, celery-beat, logrotate
# - monitoring: Add Prometheus, Grafana
# - watchtower: Add Watchtower for auto-updates
#
# Usage: docker-compose --profile monitoring --profile watchtower up -d
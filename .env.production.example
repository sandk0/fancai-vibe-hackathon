# BookReader AI Production Environment Variables
#
# ⚠️  SECURITY WARNING ⚠️
# - This is a TEMPLATE file with placeholder values
# - Generate strong secrets using: python -c "import secrets; print(secrets.token_urlsafe(64))"
# - Copy this file to .env.production and fill with real values
# - NEVER commit actual .env.production to git!
# - Ensure .env.production is in .gitignore

# =============================================================================
# DOMAIN CONFIGURATION
# =============================================================================
DOMAIN_NAME=your-domain.com
DOMAIN_URL=https://your-domain.com

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DB_NAME=bookreader_prod
DB_USER=bookreader_user
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
DB_PASSWORD=REPLACE_WITH_GENERATED_SECRET_MIN_32_CHARS

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
REDIS_PASSWORD=REPLACE_WITH_GENERATED_SECRET_MIN_32_CHARS

# =============================================================================
# SECURITY KEYS (CRITICAL!)
# =============================================================================
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(64))"
SECRET_KEY=REPLACE_WITH_GENERATED_SECRET_MIN_64_CHARS
JWT_SECRET_KEY=REPLACE_WITH_GENERATED_SECRET_MIN_64_CHARS

# =============================================================================
# SSL/TLS SETTINGS
# =============================================================================
SSL_EMAIL=admin@your-domain.com

# =============================================================================
# AI SERVICES
# =============================================================================
OPENAI_API_KEY=
POLLINATIONS_ENABLED=true

# =============================================================================
# FILE UPLOAD LIMITS
# =============================================================================
MAX_FILE_SIZE=52428800
UPLOAD_MAX_SIZE=52428800

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================
WORKERS_COUNT=4
CELERY_WORKERS=2
CELERY_REPLICAS=2
LOG_LEVEL=info

# =============================================================================
# CORS AND SECURITY
# =============================================================================
CORS_ORIGINS=https://your-domain.com,https://www.your-domain.com
ALLOWED_HOSTS=your-domain.com,www.your-domain.com

# =============================================================================
# MONITORING (OPTIONAL)
# =============================================================================
GRAFANA_USER=admin
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(24))"
GRAFANA_PASSWORD=REPLACE_WITH_GENERATED_SECRET_MIN_24_CHARS
SLACK_WEBHOOK_URL=

# =============================================================================
# JWT TOKEN EXPIRATION
# =============================================================================
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================================
# DATABASE CONNECTION POOL
# =============================================================================
MAX_CONNECTIONS_COUNT=20
MIN_CONNECTIONS_COUNT=5

# =============================================================================
# APPLICATION URLS FOR BUILD
# =============================================================================
REACT_APP_API_URL=/api/v1
REACT_APP_WS_URL=/ws
VITE_API_URL=https://your-domain.com/api/v1
VITE_WS_URL=wss://your-domain.com/ws
VITE_APP_NAME=BookReader AI

# =============================================================================
# STATIC FILES
# =============================================================================
STATIC_FILES_URL=/static

# =============================================================================
# ENVIRONMENT
# =============================================================================
ENVIRONMENT=production
NODE_ENV=production

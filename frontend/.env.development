# BookReader AI - Frontend Development Environment
# ================================================

# API Configuration (Local Backend)
VITE_API_BASE_URL=http://localhost:8000
VITE_API_TIMEOUT=30000

# WebSocket (если используется)
VITE_WS_URL=ws://localhost:8000/ws

# Application Info
VITE_APP_NAME=BookReader AI (Dev)
VITE_APP_VERSION=1.0.0-dev
VITE_ENVIRONMENT=development

# Features (все включены для тестирования)
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_ERROR_REPORTING=false
VITE_ENABLE_PWA=false

# Sentry (отключен в dev)
VITE_SENTRY_DSN=
VITE_SENTRY_ENABLED=false

# Google Analytics (отключен в dev)
VITE_GA_TRACKING_ID=
VITE_GA_ENABLED=false

# Image CDN (локально)
VITE_IMAGE_CDN_URL=http://localhost:8000/static/images

# EPUB Reader Settings
VITE_EPUB_DEFAULT_FONT_SIZE=16
VITE_EPUB_DEFAULT_THEME=light
VITE_EPUB_ENABLE_OFFLINE=true

# Maximum file sizes (in MB)
VITE_MAX_UPLOAD_SIZE_MB=50
VITE_MAX_IMAGE_SIZE_MB=10

# Cache Settings
VITE_CACHE_ENABLED=true
VITE_CACHE_TTL=300

# Debug (включен для разработки)
VITE_DEBUG=true
VITE_SHOW_DEV_TOOLS=true

# Mock Data (для тестирования без бэкенда)
VITE_USE_MOCK_DATA=false

# Hot Module Replacement
VITE_HMR=true

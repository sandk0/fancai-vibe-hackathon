  "screenshots": [
    {
      "src": "/screenshots/library-desktop.png",
      "sizes": "1280x720",
      "type": "image/png",
      "platform": "wide",
      "label": "Book library with AI-generated images"
    },
    {
      "src": "/screenshots/reader-desktop.png",
      "sizes": "1280x720",
      "type": "image/png",

{
  "id": "/",
  "name": "fancai - Read with AI-Generated Illustrations",
  "short_name": "fancai",
  "description": "Transform your reading experience with AI-powered image generation from book descriptions. Upload EPUB and FB2 files and watch your stories come to life.",
  "version": "1.0.0",
  "start_url": "/?source=pwa",
  "display": "standalone",
  "orientation": "portrait-primary",
  "theme_color": "#0ea5e9",
  "background_color": "#ffffff",
  "lang": "en",
  "scope": "/",
  "categories": ["books", "entertainment", "education", "productivity"],

  "icons": [
    {
      "src": "/icon-192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/icon-192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "maskable"
    },
    {
      "src": "/icon-512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/icon-512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable"
    }
  ],

  "shortcuts": [
    {
      "name": "My Library",
      "short_name": "Library",
      "description": "View your book collection",
      "url": "/library",
      "icons": [
        {
          "src": "/icon-192.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Upload Book",
      "short_name": "Upload",
      "description": "Upload a new book",
      "url": "/library?action=upload",
      "icons": [
        {
          "src": "/icon-192.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    }
  ],

  "prefer_related_applications": false,

  "file_handlers": [
    {
      "action": "/upload",
      "accept": {
        "application/epub+zip": [".epub"],
        "application/x-fictionbook+xml": [".fb2"]
      }
    }
  ],

  "share_target": {
    "action": "/upload",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "files": [
        {
          "name": "book",
          "accept": ["application/epub+zip", "application/x-fictionbook+xml"]
        }
      ]
    }
  },

  "launch_handler": {
    "client_mode": "focus-existing"
  }
}

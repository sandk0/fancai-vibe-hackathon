      "platform": "narrow",
      "label": "Mobile book library"
    },
    {
      "src": "/screenshots/reader-mobile.png",
      "sizes": "375x812",
      "type": "image/png",
      "platform": "narrow",
      "label": "Mobile reading experience"
    }
  ],
  
  "shortcuts": [
    {
      "name": "My Library",
      "short_name": "Library",
      "description": "View your book collection",
      "url": "/library",
      "icons": [
        {
          "src": "/icons/library-shortcut.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Upload Book",
      "short_name": "Upload",
      "description": "Upload a new book",
      "url": "/library?action=upload",
      "icons": [
        {
          "src": "/icons/upload-shortcut.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Continue Reading",
      "short_name": "Continue",
      "description": "Continue your current book",
      "url": "/continue-reading",
      "icons": [
        {
          "src": "/icons/continue-shortcut.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],
  
  "features": [
    "Cross Platform",
    "Fast",
    "Fullscreen Capable",
    "Installable",
    "Offline Capable"
  ],
  
  "prefer_related_applications": false,
  
  "edge_side_panel": {
    "preferred_width": 400
  },
  
  "file_handlers": [
    {
      "action": "/upload",
      "accept": {
        "application/epub+zip": [".epub"],
        "application/x-fictionbook+xml": [".fb2"]
      }
    }
  ],
  
  "protocol_handlers": [
    {
      "protocol": "web+bookreader",
      "url": "/import?url=%s"
    }
  ],
  
  "share_target": {
    "action": "/upload",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "files": [
        {
          "name": "book",
          "accept": ["application/epub+zip", "application/x-fictionbook+xml"]
        }
      ]
    }
  },
  
  "launch_handler": {
    "client_mode": "focus-existing"
  }
}
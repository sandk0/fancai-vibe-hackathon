# ============================================================
# fancai - Frontend Environment Configuration
# ============================================================
#
# This is an example environment configuration file.
# Copy this file to .env for local development:
#   cp .env.example .env
#
# For production deployment, use .env.production as template.
#
# ============================================================

# ------------------------------------------------------------
# API Configuration (REQUIRED)
# ------------------------------------------------------------

# Backend API base URL
# Development: http://localhost:8000/api/v1
# Production:  https://api.yourdomain.com/api/v1
VITE_API_BASE_URL=http://localhost:8000/api/v1

# API request timeout in milliseconds
VITE_API_TIMEOUT=30000

# ------------------------------------------------------------
# WebSocket Configuration (OPTIONAL)
# ------------------------------------------------------------

# WebSocket URL for real-time features
# If not specified, will be auto-generated from VITE_API_BASE_URL
# Development: ws://localhost:8000/ws
# Production:  wss://api.yourdomain.com/ws
VITE_WS_URL=ws://localhost:8000/ws

# ------------------------------------------------------------
# Application Info
# ------------------------------------------------------------

VITE_APP_NAME=fancai
VITE_APP_VERSION=1.0.0
VITE_ENVIRONMENT=development

# ------------------------------------------------------------
# Feature Flags
# ------------------------------------------------------------

# Enable analytics tracking
VITE_ENABLE_ANALYTICS=false

# Enable error reporting (Sentry)
VITE_ENABLE_ERROR_REPORTING=false

# Enable Progressive Web App features
VITE_ENABLE_PWA=true

# ------------------------------------------------------------
# Error Tracking - Sentry (OPTIONAL)
# ------------------------------------------------------------

# Sentry Data Source Name (DSN)
# Get from: https://sentry.io/settings/YOUR_ORG/projects/YOUR_PROJECT/keys/
VITE_SENTRY_DSN=

# Enable Sentry error tracking
VITE_SENTRY_ENABLED=false

# ------------------------------------------------------------
# Analytics - Google Analytics (OPTIONAL)
# ------------------------------------------------------------

# Google Analytics Tracking ID (e.g., G-XXXXXXXXXX)
VITE_GA_TRACKING_ID=

# Enable Google Analytics
VITE_GA_ENABLED=false

# ------------------------------------------------------------
# CDN Configuration (OPTIONAL)
# ------------------------------------------------------------

# Image CDN URL for serving book covers and generated images
# If not specified, images will be served from backend
VITE_IMAGE_CDN_URL=

# ------------------------------------------------------------
# EPUB Reader Settings
# ------------------------------------------------------------

# Default font size in pixels
VITE_EPUB_DEFAULT_FONT_SIZE=16

# Default theme ('light' or 'dark')
VITE_EPUB_DEFAULT_THEME=light

# Enable offline reading support
VITE_EPUB_ENABLE_OFFLINE=true

# ------------------------------------------------------------
# File Upload Limits
# ------------------------------------------------------------

# Maximum book upload size in megabytes
VITE_MAX_UPLOAD_SIZE_MB=50

# Maximum image upload size in megabytes
VITE_MAX_IMAGE_SIZE_MB=10

# ------------------------------------------------------------
# Cache Settings
# ------------------------------------------------------------

# Enable client-side caching
VITE_CACHE_ENABLED=true

# Cache TTL (Time To Live) in seconds
VITE_CACHE_TTL=3600

# ------------------------------------------------------------
# Debug & Development (DEVELOPMENT ONLY)
# ------------------------------------------------------------

# Enable debug logging (MUST be false in production!)
VITE_DEBUG=true

# Show development tools in UI
VITE_SHOW_DEV_TOOLS=true

# Log level: 'debug', 'info', 'warn', 'error'
VITE_LOG_LEVEL=debug

# ------------------------------------------------------------
# Build Info (AUTO-POPULATED BY CI/CD)
# ------------------------------------------------------------

# Build timestamp (ISO 8601 format)
VITE_BUILD_TIME=

# Git commit SHA
VITE_GIT_COMMIT=

# ============================================================
# SECURITY NOTES
# ============================================================
#
# 1. NEVER commit .env files with real credentials to git
# 2. Use different values for development/staging/production
# 3. Set VITE_DEBUG=false in production
# 4. Keep API keys and secrets secure
# 5. All VITE_ prefixed variables are exposed to frontend
#    (Do NOT put backend secrets here!)
#
# ============================================================

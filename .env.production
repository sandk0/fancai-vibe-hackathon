# BookReader AI Production Environment Variables
# ВАЖНО: Измените все пароли и секретные ключи для production!

# Domain Settings
DOMAIN_NAME=your-domain.com
DOMAIN_URL=https://your-domain.com

# Database Configuration
DB_NAME=bookreader_prod
DB_USER=bookreader_user
DB_PASSWORD=CHANGE_THIS_STRONG_PASSWORD_123!

# Redis Configuration  
REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD_456!

# Security Keys (ОБЯЗАТЕЛЬНО ИЗМЕНИТЬ!)
SECRET_KEY=CHANGE_THIS_SECRET_KEY_789_VERY_LONG_AND_SECURE
JWT_SECRET_KEY=CHANGE_THIS_JWT_SECRET_890_ALSO_VERY_SECURE

# SSL/TLS Settings
SSL_EMAIL=admin@your-domain.com

# AI Services
OPENAI_API_KEY=
POLLINATIONS_ENABLED=true

# File Upload Limits
MAX_FILE_SIZE=52428800
UPLOAD_MAX_SIZE=52428800

# Performance Settings
WORKERS_COUNT=4
CELERY_WORKERS=2
CELERY_REPLICAS=2
LOG_LEVEL=info

# CORS and Security
CORS_ORIGINS=https://your-domain.com,https://www.your-domain.com
ALLOWED_HOSTS=your-domain.com,www.your-domain.com

# Monitoring (опционально)
GRAFANA_USER=admin
GRAFANA_PASSWORD=CHANGE_THIS_GRAFANA_PASSWORD
SLACK_WEBHOOK_URL=

# JWT Token Expiration
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Database Connection Pool
MAX_CONNECTIONS_COUNT=20
MIN_CONNECTIONS_COUNT=5

# Application URLs for build
REACT_APP_API_URL=/api/v1
REACT_APP_WS_URL=/ws
VITE_API_URL=https://your-domain.com/api/v1
VITE_WS_URL=wss://your-domain.com/ws
VITE_APP_NAME=BookReader AI

# Static Files
STATIC_FILES_URL=/static

# Environment
ENVIRONMENT=production
NODE_ENV=production
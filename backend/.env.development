# SpaCy Settings
SPACY_MODEL=ru_core_news_sm
SPACY_BATCH_SIZE=10

# Multi-NLP Manager
MULTI_NLP_MODE=ensemble
MULTI_NLP_CONSENSUS_THRESHOLD=0.6

# ========================================
# IMAGE GENERATION
# ========================================

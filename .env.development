# BookReader AI Development Environment
# Local development configuration

# Domain Configuration
DOMAIN_NAME=localhost
DOMAIN_URL=http://localhost

# Database Settings
DB_NAME=bookreader_dev
DB_USER=postgres
DB_PASSWORD=postgres123

# Redis Settings
REDIS_PASSWORD=redis123

# Security (Development only - not for production!)
SECRET_KEY=dev-secret-key-for-local-development-only-very-long-string
JWT_SECRET_KEY=jwt-dev-secret-key-also-very-long-string
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# PgAdmin Settings
PGADMIN_DEFAULT_EMAIL=admin@example.com
PGADMIN_DEFAULT_PASSWORD=admin123

# AI Services
OPENAI_API_KEY=
POLLINATIONS_ENABLED=true

# Performance
WORKERS_COUNT=2
CELERY_CONCURRENCY=2
CELERY_MAX_TASKS_PER_CHILD=100
CELERY_MAX_MEMORY_PER_CHILD=150000
CELERY_SOFT_TIME_LIMIT=1500
CELERY_TIME_LIMIT=1800
LOG_LEVEL=INFO

# CORS Security - включаем оба порта: 3000 для старых конфигов, 5173 для Vite
CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173,http://localhost:3000,http://127.0.0.1:3000
ALLOWED_HOSTS=localhost,127.0.0.1

# Build Variables
VITE_API_URL=http://localhost/api/v1
VITE_APP_NAME=BookReaderDev

# Development flags
DEBUG=true
ENVIRONMENT=development

# Parser optimization settings
PARSING_MAX_CONCURRENT=3
PARSING_BATCH_SIZE=50
NLP_CACHE_ENABLED=true
